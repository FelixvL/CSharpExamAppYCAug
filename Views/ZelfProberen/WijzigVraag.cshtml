@model DBExamenVragenAppDB.Vraag
@{
    ViewBag.Title = "WijzigVraag";
}

<h2>WijzigVraag</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.VraagID)
    <span>Vraag</span>
    <br />

    @Html.EditorFor(model => model.VraagTekst, new { htmlAttributes = new { @class = "form-control" } })

    <input type="submit" value="Save" class="btn btn-default" />
}